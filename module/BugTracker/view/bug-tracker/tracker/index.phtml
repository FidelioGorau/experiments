<?php
$title = 'List of active bugs';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<ul>
    <?php
    foreach($this->posts as $post) {
        print '<li>
            <a href="' . $this->url('bugtracker', array('action'=>'view', 'id' => $post->getId())) . '">' . $post->getTitle() . '</a>
            [' . date('d.m.Y H:i', $post->getCreated()). ']
        </li>';
    }
    ?>
</ul>